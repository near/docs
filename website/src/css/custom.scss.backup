@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

// ============================================================================
// CSS VARIABLES & THEME CONFIGURATION
// ============================================================================

:root {
  // Typography
  --h1-font-size: 30px;
  --h2-font-size: 28px;
  --h6-font-size: 20px;
  --footer-font-size: 18px;

  // NEAR Brand Colors
  --near-color-royal: #5f8afa;

  // Font Configuration
  --bs-font-sans-serif: 'Poppins', 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', 'Noto Sans', 'Liberation Sans', Arial, sans-serif;
  --bs-body-font-family: var(--bs-font-sans-serif);
  --near-font-headlines: var(--bs-font-sans-serif);
  --near-font-body: var(--bs-body-font-family);

  // Chat Component Variables
  --chat-bg: #f8f9fa;
  --chat-header-bg: #e9ecef;
  --chat-input-bg: #f3f4f6;
  --chat-user-message-bg: #007bff;
  --chat-ai-message-bg: #f1f3f5;
  --chat-ai-message-border: #dee2e6;
  --chat-text-color: #212529;
  --chat-ai-text-color: #212529;
  --chat-welcome-text: #6c757d;
  --chat-input-text: #212529;
  --chat-input-bg-focus: #fff;
  --chat-toggle-button-bg: #dee2e6;
}

// ============================================================================
// DARK THEME OVERRIDES
// ============================================================================

[data-theme='dark'] {
  --ifm-color-primary: #82aaff;
  --near-color-royal: #82aaff;
  --ifm-background-color: #000000;
  --ifm-background-surface-color: #111111;

  // Dark theme chat variables
  --chat-bg: #212529;
  --chat-header-bg: #343a40;
  --chat-input-bg: #495057;
  --chat-user-message-bg: #007bff;
  --chat-ai-message-bg: #495057;
  --chat-ai-message-border: #6c757d;
  --chat-text-color: #ffffff;
  --chat-ai-text-color: #ffffff;
  --chat-welcome-text: #adb5bd;
  --chat-input-text: #ffffff;
  --chat-input-bg-focus: #5a6268;
  --chat-toggle-button-bg: #343a40;

  hr {
    background-color: #2d2d2d;
  }
}

// Force dark theme background with higher specificity
html[data-theme='dark'] {
  --ifm-background-color: #000000;
  --ifm-background-surface-color: #111111;
  background-color: #000000;
}

html[data-theme='dark'] body {
  background-color: #000000;
}

html[data-theme='dark'] .main-wrapper {
  background-color: #000000;
}

[data-theme='light'] li hr {
  background-color: #f8f8f8;
}

// ============================================================================
// BASE STYLES & TYPOGRAPHY
// ============================================================================

.bootstrap-scope body,
body {
  font-family: var(--bs-body-font-family);
  color: var(--ifm-font-color-base);
  line-height: inherit;
  text-align: left;
}

.big-title {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  padding-top: 1rem;
}

strong {
  font-weight: 600;
}

code {
  padding: 0 0.2rem;
}

hr {
  height: 1px;
  border-radius: 0;
  margin: 3.5em 0;
}

.text-center {
  text-align: center !important;
}

// ============================================================================
// LANDING PAGE STYLES
// ============================================================================

.landing {
  margin: 2.5em 0 1.5em 0;
}

.landing-intro > * {
  position: relative;
  z-index: 2;
}

.landing-intro h1 {
  font-size: 3.5rem;
  font-weight: 700;
  margin: 0 auto 1.5rem auto;
  background: linear-gradient(135deg, #5f8afa 0%, #22c55e 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.02em;
  line-height: 1.1;
  text-align: center;
  display: block;
}

.landing-underline {
  width: 120px;
  height: 4px;
  background: linear-gradient(135deg, #5f8afa 0%, #22c55e 100%);
  margin: 0 auto;
  border-radius: 2px;
}

.landing-hero {
  text-align: center;
  padding: 3rem 2rem;
  background: linear-gradient(135deg, var(--ifm-color-primary-lightest) 0%, var(--ifm-background-color) 100%);
  border-radius: 16px;
  margin-bottom: 4rem;
  border: 1px solid var(--ifm-color-emphasis-200);
}

.landing-hero h1 {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  background: linear-gradient(135deg, var(--ifm-color-primary) 0%, var(--ifm-color-primary-dark) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.landing-hero p {
  font-size: 1.2rem;
  color: var(--ifm-color-content-secondary);
  max-width: 800px;
  margin: 0 auto;
  line-height: 1.6;
}

@media (max-width: 768px) {
  .landing-intro h1 {
    font-size: 2.5rem;
  }
  
  .landing-intro {
    padding: 3rem 1rem 2rem 1rem;
  }
}

// ============================================================================
// LIST STYLES
// ============================================================================

ol li::marker {
  color: var(--near-color-royal);
  font-weight: 600;
}

ul li::marker {
  color: var(--near-color-royal);
  font-weight: 600;
}

li hr {
  height: 4px;
  margin: 0.4em auto;
  width: 93%;
  border-width: 0;
}

li > ul {
  margin-top: 0.4rem;
}

.menu__list .menu__list li hr {
  background-color: #e8f0f9;
  height: 2px;
}

// ============================================================================
// CARD COMPONENTS
// ============================================================================

.card {
  margin: 0;
  border-radius: 12px;
  border: 1px solid var(--ifm-color-emphasis-200);
  background: var(--ifm-background-color);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.card:hover {
  transform: translateY(-8px) scale(1.02);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
  border-color: var(--ifm-color-primary-lighter);
}

[data-theme='dark'] .card {
  background: var(--ifm-background-surface-color);
  border-color: var(--ifm-color-emphasis-300);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

[data-theme='dark'] .card:hover {
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
}

.card__image {
  position: relative;
  overflow: hidden;
  border: 0;
  height: 200px;
  background: linear-gradient(135deg, var(--ifm-color-primary-lightest) 0%, var(--ifm-color-primary-lighter) 100%);
}

.card__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.card__image:hover img {
  transform: scale(1.1);
}

.card__image::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, transparent 60%, rgba(0, 0, 0, 0.1));
  pointer-events: none;
}

.card__body {
  padding: 1.5rem;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  color: var(--ifm-font-color-base);
}

.card__body h3 {
  margin: 0 0 0.75rem 0 !important;
  color: var(--ifm-heading-color);
  font-size: 1.25rem;
  font-weight: 600;
  line-height: 1.3;
}

