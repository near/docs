// Generate sidebar icon styles dynamically
@each $section, $icons in $sidebar-icons {
  .sidebar-main-category {
    &:has(.menu__link[href*="#{$section}"])::after,
    .menu__link[href*="#{$section}"]::after {
      background-image: url(map-get($icons, 'light'));
      background-size: 14px 14px;
      background-repeat: no-repeat;
    }
  }

  [data-theme='dark'] .sidebar-main-category {
    &:has(.menu__link[href*="#{$section}"])::after,
    .menu__link[href*="#{$section}"]::after {
      background-image: url(map-get($icons, 'dark'));
      background-size: 14px 14px;
      background-repeat: no-repeat;
    }
  }
}

// Base sidebar styling
.sidebar-main-category {
  > .menu__list-item-collapsible > .menu__link {
    font-family: 'Poppins', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-weight: 600;
    font-size: 0.8rem;
    color: #000000 !important;
    padding: 0.75rem 1rem 0.75rem 2.5rem;
    border-radius: 8px;
    margin: 0.25rem 0;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    position: relative;

    &::after {
      content: '';
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      width: 16px;
      height: 16px;
      background-size: contain;
      background-repeat: no-repeat;
      background-position: center;
    }

    &::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 3px;
      height: 0;
      background: var(--ifm-font-color-base);
      transition: height 0.2s ease;
      border-radius: 2px;
    }

    &:hover {
      background-color: rgba(59, 130, 246, 0.1);
      color: #3b82f6 !important;
      
      &::before {
        height: 60%;
        background: #3b82f6;
      }
    }

    &--active {
      background-color: var(--ifm-hover-overlay);
      color: #5f8afa !important;

      &::before {
        height: 100%;
      }
    }
  }
}

[data-theme='dark'] .sidebar-main-category {
  > .menu__list-item-collapsible > .menu__link {
    color: var(--ifm-font-color-base) !important;

    &:hover {
      background-color: rgba(59, 130, 246, 0.15);
      color: #60a5fa !important;
    }

    &--active {
      background-color: var(--ifm-hover-overlay);
      color: var(--ifm-font-color-base) !important;
    }
  }
}

